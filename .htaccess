# ============================================
# CONFIGURAÇÃO DE SERVIDOR PARA PWA
# ============================================

# Habilita compressão GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/css text/javascript application/javascript application/json
    AddOutputFilterByType DEFLATE text/xml application/xml application/xml+rss
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# Configuração de cache
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Cache para arquivos estáticos (1 ano)
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    
    # Cache para CSS e JS (1 mês)
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    
    # Sem cache para HTML (sempre revalidar)
    ExpiresByType text/html "access plus 0 seconds"
    
    # Manifest (revalidar frequentemente)
    ExpiresByType application/json "access plus 1 day"
</IfModule>

# Configurar headers corretos para MIME types
<IfModule mod_mime.c>
    AddType application/json .json
    AddType application/manifest+json .webmanifest
    AddType text/cache-manifest .appcache
</IfModule>

# Habilitar CORS para Service Worker
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Cache-Control "public, max-age=3600"
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Rewrite rules para SPA (Single Page Application)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Se o arquivo ou diretório existe, usa como está
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Caso contrário, redireciona para index.html
    RewriteRule ^ index.html [QSA,L]
</IfModule>

# Desabilitar listagem de diretórios
Options -Indexes

# Segurança básica
<FilesMatch "\.json$">
    <IfModule mod_headers.c>
        Header set Content-Type "application/json"
    </IfModule>
</FilesMatch>
